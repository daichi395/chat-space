.side-bar
   .side-header
      .header-box
         %p.header-box__user-name
            = current_user.name
         %ul.header-box__icon
            %li.header-box__icon__new-group
               = link_to new_group_path(current_user) do
                  %i.far.fa-edit
            %li.header-box__icon__edit-user
               = link_to edit_user_path(current_user) do
                  %i.fas.fa-cog
   .group-list
      - current_user.groups.each do |group|
         .group-list__kind
            = link_to '#' do
               .group-list__kind__group-name
                  = group.name
               .group-list__kind__message
                  まだメッセージがありません